#!/bin/bash
# Restart local services command
# Usage: ./commands/restart {project}
# Examples:
#   ./commands/restart all
#   ./commands/restart argo
#   ./commands/restart alpine

set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
LIB_DIR="${SCRIPT_DIR}/lib"

# Parse arguments
PROJECT="${1:-all}"

# Route to appropriate script
case "$PROJECT" in
    all)
        echo "üîÑ Restarting all local services..."
        "${LIB_DIR}/restart-local-services.sh" all
        ;;
    argo)
        echo "üîÑ Restarting Argo local..."
        "${LIB_DIR}/restart-local-services.sh" argo
        ;;
    alpine)
        echo "üîÑ Restarting Alpine local..."
        "${LIB_DIR}/restart-local-services.sh" alpine
        ;;
    *)
        echo "‚ùå Error: Invalid project '$PROJECT'"
        echo "  Valid projects: all, argo, alpine"
        exit 1
        ;;
esac

