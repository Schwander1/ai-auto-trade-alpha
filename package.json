{
  "name": "argo-alpine-monorepo",
  "version": "1.0.0",
  "description": "Intelligent, self-optimizing trading signal platform monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,py}\"",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "deploy": "./scripts/deploy.sh",
    "deploy:argo": "./scripts/deploy.sh argo",
    "deploy:alpine": "./scripts/deploy.sh alpine",
    "check-env": "./scripts/check-env.sh",
    "health": "./scripts/health-check.sh",
    "rollback": "./scripts/rollback.sh",
    "status": "./scripts/monorepo-status.sh",
    "optimize": "./scripts/optimize.sh",
    "prepare": "husky install",
    "version": "changeset version",
    "release": "changeset publish",
    "agentic:deploy": "./scripts/agentic/copilot-with-rules.sh deploy",
    "agentic:refactor": "./scripts/agentic/copilot-with-rules.sh refactor",
    "agentic:usage": "python scripts/agentic/usage_tracker.py report",
    "agentic:monitor": "python scripts/agentic/monitor.py report",
    "agentic:limits": "python scripts/agentic/rate_limiter.py status",
    "agentic:deploy:auto": "./scripts/agentic/automated-deployment.sh",
    "agentic:troubleshoot": "./scripts/agentic/automated-troubleshooting.sh",
    "agentic:code-review": "./scripts/agentic/weekly-code-review.sh",
    "agentic:test-coverage": "./scripts/agentic/test-coverage-analysis.sh",
    "agentic:docs-update": "./scripts/agentic/monthly-docs-update.sh"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@types/node": "^20.11.5",
    "husky": "^8.0.3",
    "prettier": "^3.2.4",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

