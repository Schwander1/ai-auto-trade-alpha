{
  "name": "argo-alpine-monorepo",
  "version": "1.0.0",
  "description": "Intelligent, self-optimizing trading signal platform monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,py}\"",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "deploy:argo": "./scripts/deploy-argo.sh",
    "deploy:alpine": "./scripts/deploy-alpine.sh",
    "health": "./scripts/health-check.sh",
    "rollback": "./scripts/rollback.sh",
    "optimize": "./scripts/optimize.sh",
    "prepare": "husky install",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@types/node": "^20.11.5",
    "husky": "^8.0.3",
    "prettier": "^3.2.4",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

