#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run linting and tests before commit
echo "ğŸ” Running pre-commit checks..."

# Run linting
pnpm lint || {
  echo "âŒ Linting failed. Please fix errors before committing."
  exit 1
}

# Run type checking
pnpm type-check || {
  echo "âŒ Type checking failed. Please fix errors before committing."
  exit 1
}

# Run tests (fast mode)
pnpm test -- --bail --findRelatedTests || {
  echo "âŒ Tests failed. Please fix errors before committing."
  exit 1
}

echo "âœ… Pre-commit checks passed!"

