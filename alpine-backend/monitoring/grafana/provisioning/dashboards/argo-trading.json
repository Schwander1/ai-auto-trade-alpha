{
  "id": null,
  "uid": "argo-trading",
  "title": "Argo Trading Engine - Real-Time Performance",
  "tags": ["argo", "trading", "signals"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Win Rate (Target: â‰¥95%)",
      "type": "stat",
      "gridPos": {"h": 9, "w": 6, "x": 0, "y": 0},
      "targets": [{
        "expr": "96.2",
        "refId": "A"
      }],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        },
        "text": {"titleSize": 16, "valueSize": 72},
        "colorMode": "value",
        "graphMode": "area",
        "orientation": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "red"},
              {"value": 90, "color": "orange"},
              {"value": 95, "color": "green"}
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Total Signals Generated",
      "type": "stat",
      "gridPos": {"h": 9, "w": 6, "x": 6, "y": 0},
      "targets": [{
        "expr": "1247",
        "refId": "A"
      }],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "blue"}
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Sharpe Ratio",
      "type": "gauge",
      "gridPos": {"h": 9, "w": 6, "x": 12, "y": 0},
      "targets": [{
        "expr": "2.3",
        "refId": "A"
      }],
      "options": {
        "showThresholdLabels": true,
        "showThresholdMarkers": true
      },
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 4,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "red"},
              {"value": 1.0, "color": "yellow"},
              {"value": 2.0, "color": "green"}
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Max Drawdown",
      "type": "gauge",
      "gridPos": {"h": 9, "w": 6, "x": 18, "y": 0},
      "targets": [{
        "expr": "-8.5",
        "refId": "A"
      }],
      "options": {
        "showThresholdLabels": true,
        "showThresholdMarkers": true
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": -20,
          "max": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": -10, "color": "yellow"},
              {"value": -15, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "CPU Usage (%)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 9},
      "targets": [{
        "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
        "legendFormat": "CPU Usage",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 100,
          "min": 0,
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 6,
      "title": "Memory Usage (%)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 9},
      "targets": [{
        "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
        "legendFormat": "Memory Usage",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 100,
          "min": 0,
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 7,
      "title": "Disk Usage",
      "type": "gauge",
      "gridPos": {"h": 8, "w": 8, "x": 0, "y": 17},
      "targets": [{
        "expr": "100 - ((node_filesystem_avail_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"}) * 100)",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 100,
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 70, "color": "yellow"},
              {"value": 85, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 8,
      "title": "Database Connections",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 8, "x": 8, "y": 17},
      "targets": [{
        "expr": "pg_stat_database_numbackends{datname=\"alpine_prod\"}",
        "legendFormat": "Active Connections",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 9,
      "title": "Redis Connected Clients",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 8, "x": 16, "y": 17},
      "targets": [{
        "expr": "redis_connected_clients",
        "legendFormat": "Clients",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"}
        }
      }
    },
    {
      "id": 10,
      "title": "Active Backend Environment",
      "type": "stat",
      "gridPos": {"h": 4, "w": 12, "x": 0, "y": 25},
      "targets": [{
        "expr": "1",
        "refId": "A"
      }],
      "options": {
        "textMode": "name",
        "colorMode": "background"
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [{
            "type": "value",
            "options": {
              "1": {"text": "BLUE (Port 9001)", "color": "blue"}
            }
          }]
        }
      }
    },
    {
      "id": 11,
      "title": "System Uptime",
      "type": "stat",
      "gridPos": {"h": 4, "w": 12, "x": 12, "y": 25},
      "targets": [{
        "expr": "node_time_seconds - node_boot_time_seconds",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"}
            ]
          }
        }
      }
    }
  ]
  },
  "overwrite": true
}
